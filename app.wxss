  text-align: center;
  padding: 20px;
  font-size: 14px;
  color: #7f7f7f;
  margin-bottom: 10px;
}

wx-slider .wx-slider-handle-wrapper {
  height: 8px;
  border-radius: 0;
}

.report_issues_cell {
  width: 100%;
  text-align: right;
  padding-right: 20px;
  font-size: 13px;
  margin-top: 5px;
  height: 20px;
  line-height: 20px;
  box-sizing: border-box;
}


.title {
  font-size: 18px;
  line-height: 30px;
  height: 30px;
  display: flex;
  align-items: center;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
  font-weight: bold;
}

.title_number {
  font-size: 20px;
}

.subtitle {
  font-size: 12px;
  line-height: 25px;
  height: 25px;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
  position: relative;
  overflow: hidden;
}

.subtitle_completed {
  border: 1px solid var(--main-green-color);
  background: var(--main-green-color);
  color: #ffffff;
  border-radius: 9px;
  padding-right: 26px !important;
}

.subtitle_completed::after {
  content: "";
  width: 3px;
  height: 7px;
  position: absolute;
  right: 7px;
  bottom: 5px;
  border: 2px solid #fff;
  border-top-color: transparent;
  border-left-color: transparent;
  transform: rotate(45deg);
}

.no_open_bg {
  background: #acacac;
}

.z10 {
  position: relative;
  z-index: 10;
}

.ml10 {
  margin-left: 10px;
}

.mr5 {
  margin-right: 5px;
}

._dis {
  opacity: 0.3;
}

.narrator {
  position: absolute;
  top: -8px;
  left: 5px;
  transform: scale(0.4);
  transform-origin: left top;
  padding: 4px 8px;
  border-radius: 4px;
  z-index: 99;
}

.narrator_man {
  background-color: #04a6f2;
  color: #7fdefc;
}

.narrator_woman {
  background-color: #f6e5e3;
  color: #ff6146;
}

.intensive_sentence_text {
  background-color: #f2f2f2;
  padding: 4px 0;
  margin-right: 5px;
  border-left: 3px solid var(--main-blue-color);
  position: relative;
  z-index: 3;
}

.intensive_sentence_text_active {
  background-color: #d6e4fd;
}

.hidden_text {
  color: rgba(0, 0, 0, 0);
}

.weui-actionsheet {
  z-index: 10000 !important;
}

/* 布局样式 v1.0*/
/* row-水平居中-垂直居中 */
.row-center {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

/* row-水平居中-垂直分隔两边 */
.row-center-between {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}

.col-center {
  display: flex;
  flex-direction: column;
}

.radius-9 {
  border-radius: 9px;
}

.radius-6 {
  border-radius: 6px;
}

.radius-3 {
  border-radius: 3px;
}

/* 点击效果 */
.tap-active {
  opacity: 0.7;
  transform: scale(0.98);
  transition: all 0.1s ease-out;
}