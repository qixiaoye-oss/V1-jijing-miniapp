page {
  background-color: #ffffff;
  padding: 20px;
  line-height: 1.4;
  font-size: 15px;
  box-sizing: border-box;
  -moz-box-sizing: border-box;
  -webkit-box-sizing: border-box;
  --color-1: #00A6ED;
  --color-2: #00D26A;
  --color-5: #979797;
  --border-color-1: #00A6ED;
  --border-color-2: #00D26A;
  --border-color-3: #d6e4fd;
  --border-color-4: #d7d7d7;
  --border-color-6: #f2f2f2;
  --background-color-1: #00A6ED;
  --background-color-3: #d6e4fd;
  --background-color-4: #d7d7d7;
  --background-color-5: #fdebd3;
  --background-color-6: #f2f2f2;

  --base-color: #00A6ED;
  --color-gray-6: rgba(151, 151, 151, 1);

  /* 用户页-主题色 */
  --theme-color: rgba(0, 166, 237, 1);
  --theme-bcakground-color: rgba(0, 166, 237, 0.15);

  /* 新样式---所有边框颜色 */
  --solid-border-color: rgba(0, 0, 0, 0.3);
  --dashed-border-color: rgba(0, 0, 0, 0.3);
  /* 练习页主要颜色 */
  --question-color: rgba(0, 166, 237, 1);
  --question-bcakground-color: rgba(0, 166, 237, 0.15);

  /* ===== 统一主色定义 ===== */
  --main-gray-color: rgba(0, 0, 0, 0.3);
  --main-green-color: #00D26A;
  --main-blue-color: #00A6ED;
  --main-red-color: #F92F60;
  --main-orange-color: #FFB02E;

  /* ===== 主色半透明背景（15%不透明度）===== */
  --main-blue-color-bg: rgba(0, 166, 237, 0.15);
  --main-green-color-bg: rgba(0, 210, 106, 0.15);
  --main-red-color-bg: rgba(249, 47, 96, 0.15);
  --main-orange-color-bg: rgba(255, 176, 46, 0.15);
}

view {
  box-sizing: border-box;
}

.layout_grid {
  display: grid;
  grid-template-columns: 1fr;
  grid-row-gap: 15px;
}

.flex_row {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.flex_row_cen {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

.flex_row_end {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: flex-end;
}

.flex_row_aro {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-around;
}

.flex_row_bet {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: flex-end;
  gap: 10px;
}

.flex_col_cen {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.flex_col {
  display: flex;
  flex-direction: column;
  align-items: center;
}

