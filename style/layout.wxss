/* grid布局 */
.layout_grid {
  display: grid;
}

.grid_rap_10 {
  grid-row-gap: 10px;
  grid-column-gap: 10px;
}

.grid_rap_15 {
  grid-row-gap: 15px;
  grid-column-gap: 15px;
}

.grid_col2 {
  grid-column-start: span 2;
}

.layout_flex {
  display: flex;
  flex-direction: row;
}

.layout_flex_col {
  display: flex;
  flex-direction: column;
}

.f_cen2 {
