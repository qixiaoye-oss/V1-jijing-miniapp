/* 通用默认样式表 */
/* 注意：首页专属样式已迁移至 pages/home/home_page/home_page.wxss */
/* 注意：标签样式已迁移至 style/tag.wxss */

/* ========== 通用布局样式 ========== */
.main-page {
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
  gap: 15px;
}

.main-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 15px;
  border: 1px dashed var(--dashed-border-color);
  border-radius: 9px;
  padding: 15px;
}

.main-item__title {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 5px;
  border-radius: 28px;
  color: rgba(0, 0, 0, 0.8);
  box-sizing: border-box;
  padding: 8px 15px;
}

.main-item__title--icon {
  flex-shrink: 0;
  width: 20px;
  height: 20px;
}

.main-item__title--text {
  font-size: 14px;
  color: rgba(0, 0, 0, 0.8);
  font-weight: bold;
}

.sub-item {
  width: 100%;
  border-radius: 9px;
  border: 1px solid var(--solid-border-color);
  align-items: center;
  justify-content: space-between;
  position: relative;
  box-sizing: border-box;
  overflow: hidden;
}

.sub-item__header {
  display: flex;
  align-items: center;
  box-sizing: border-box;
  padding: 15px;
}

.sub-item__title {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 5px;
  border-radius: 3px;
  position: relative;
  gap: 5px;
  min-width: 0;
}

.sub-item__title--icon {
  flex-shrink: 0;
  width: 25px;
  height: 25px;
}

.sub-item__title--text {
  font-weight: bold;
  color: #000000;
  font-size: 16px;
  line-height: 1.4;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.sub-item__intervals {
  width: 100%;
  height: 1px;
  background: var(--solid-border-color);
}

.sub-item__footer {
  display: flex;
  align-items: flex-start;
  flex-wrap: wrap;
  gap: 10px;
  padding: 15px;
  width: 100%;
}

.sub-item__progress {
  display: flex;
  align-items: center;
  flex-wrap: wrap;
  gap: 10px;
  width: 0;
  flex-grow: 1;
}

.switch-original {
  transform: scale(0.75);
  transform-origin: right;
}
