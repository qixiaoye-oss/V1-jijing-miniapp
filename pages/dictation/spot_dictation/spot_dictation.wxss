/**
 * spot_dictation 页面特有样式
 * 公共样式已提取至 /style/dictation-common.wxss
 */

/* 覆盖全局 page padding */
page {
  padding: 0;
  overflow: hidden;
  height: 100%;
}

/* ==================== 卡片内容区域 ==================== */

.swiper_content_container {
  flex: 1;
  border: 1px solid var(--main-gray-color);
  border-radius: 9px;
  width: calc(100% - 20px);
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
  margin-bottom: 1px;
  padding: 15px;
  overflow: hidden;
}

/* ==================== 顶部区域包裹容器 ==================== */

.top_area_wrapper {
  flex: 1 1 auto;           /* 可伸展、可收缩 */
  min-height: 60px;         /* 最小高度保护 */
  width: 100%;
  overflow-y: auto;         /* 高度不足时可滚动 */
  margin-bottom: 15px;      /* 与底部区域间距 */
  display: flex;
  flex-direction: column;
  align-items: center;
}

/* ==================== 答案显示区域 ==================== */

.content_container {
  font-size: 15px;
  box-sizing: border-box;
  width: 100%;
  color: #000000;
  position: relative;
}

.article_open_cell {
  width: 100%;
  min-height: 92px;
}

.reference_answer_cell {
  font-weight: bold;
  font-size: 22px;
}

/* 覆盖公共样式的尺寸 */
.close_open_cell {
  width: 100%;
  min-height: 92px;
}

/* ==================== 选项样式 ==================== */

.options {
  align-items: flex-start;
  font-size: 16px;
  margin-bottom: 10px;
}

.options:last-child {
  margin-bottom: 0;
}

.options view:first-child {
  margin-right: 10px;
  font-weight: bold;
}

.options view:last-child {
  line-height: 1.4;
}

/* ==================== 图片内容 ==================== */

.content_img {
  width: 100%;
  flex: 1 1 auto;
}

/* ==================== 答题区域 ==================== */

.question_container {
  flex: 0 0 auto;           /* 固定高度，不伸缩 */
  width: 100%;
  font-size: 16px;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
}

.question_contant {
  font-weight: bold;
  line-height: 23px;
  color: #000000;
  box-sizing: border-box;
  width: 100%;
  margin-bottom: 15px;
}

.paper_tip {
  border-radius: 6px;
  border: 1px solid var(--main-gray-color);
  font-size: 16px;
  height: 40px;
  box-sizing: border-box;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #999999;
}

/* 输入框容器 */
.input-wrapper {
  position: relative;
  width: 100%;
}

/* ==================== 内容区域高度（配合固定按钮组） ==================== */

/* 注意：middle_of_adaptive 的 flex 由 inline style 动态控制 */
/* 当 contentAreaHeight 有值时，inline style 会设置 height 和 flex: none */

/* btn-page-bottom 内的 btn-group-split 不需要 margin（覆盖 dictation-common.wxss） */
.btn-page-bottom .btn-group-split {
  margin: 0;
  width: 100%;
}

.layout_ribbon {
  font-size: 15px;
  width: 100%;
}
