/**
 * spot_dictation 页面特有样式
 * 公共样式已提取至 /style/dictation-common.wxss
 */

/* 覆盖全局 page padding */
page {
  padding: 0;
  overflow: hidden;
  height: 100%;
}

/* ==================== 卡片内容区域 ==================== */

.swiper_content_container {
  flex: 1;
  border: 1px solid rgba(0, 0, 0, 0.3);
  border-radius: 9px;
  width: calc(100% - 20px);
  flex-grow: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
  margin-bottom: 1px;
  padding: 15px;
}

/* ==================== 答案显示区域 ==================== */

.content_container {
  font-size: 15px;
  box-sizing: border-box;
  width: 100%;
  min-height: 92px;
  height: 92px;
  color: #000000;
  position: relative;
  margin-bottom: 20px;
}

.article_open_cell {
  width: 100%;
  min-height: 92px;
}

.reference_answer_cell {
  font-weight: bold;
  font-size: 22px;
}

/* 覆盖公共样式的尺寸 */
.close_open_cell {
  width: 100%;
  height: 92px;
  min-height: 92px;
}

/* ==================== 选项样式 ==================== */

.options {
  align-items: flex-start;
  font-size: 16px;
}

.options view:first-child {
  margin-right: 10px;
  font-weight: bold;
  position: relative;
  top: 1px;
}

/* ==================== 图片内容 ==================== */

.content_img {
  flex: 1;
  width: 100%;
}

/* ==================== 答题区域 ==================== */

.question_container {
  width: 100%;
  font-size: 16px;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
  margin-top: 15px;
}

.question_contant {
  font-weight: bold;
  line-height: 23px;
  color: #000000;
  box-sizing: border-box;
  width: 100%;
  overflow: auto;
  max-height: calc(100% - 55px);
  margin-bottom: 15px;
}

.paper_tip {
  border-radius: 6px;
  border: 1px solid rgba(0, 0, 0, 0.3);
  font-size: 16px;
  height: 40px;
  box-sizing: border-box;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #999999;
}

/* 输入框容器 */
.input-wrapper {
  position: relative;
  width: 100%;
}

/* ==================== 内容区域高度（配合固定按钮组） ==================== */

/* 注意：middle_of_adaptive 的 flex 由 inline style 动态控制 */
/* 当 contentAreaHeight 有值时，inline style 会设置 height 和 flex: none */

/* btn-page-bottom 内的 btn-group-split 不需要 margin（覆盖 dictation-common.wxss） */
.btn-page-bottom .btn-group-split {
  margin: 0;
  width: 100%;
}

.layout_ribbon {
  font-size: 15px;
  width: 100%;
}
