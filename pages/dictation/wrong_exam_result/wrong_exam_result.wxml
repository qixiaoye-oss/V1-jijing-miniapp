<import src="/templates/page-loading.wxml" />
<template is="pageLoading" data="{{loading, loadProgress}}" />
<skeleton type="sentence" loading="{{loading}}" rows="{{5}}" />
<wxs src="/utils/util.wxs" module="wxsUtil" />
<view class="base_page" wx:if="{{!loading}}">
  <veiw class="questions_container">
    <view wx:for="{{list}}" wx:key="id" class="question_container" data-qid="{{item.wordId}}" data-sid="{{item.setId}}" data-index="{{index + 1}}" data-length="{{list.length}}" bindtap="change" hover-class="tap-active" hover-stay-time="100">
      <view class="flex_row_bet">
        <view class="num_cell">{{index+1}}</view>
        <view class="user_choice_cell {{item.status === '1'?'correct':'error'}}">{{wxsUtil.formatNull(item.userChoice,'未填写')}}</view>
        <view class="status_cell">
          <image class="status_img" wx:if="{{item.status === '1'}}" src="/images/detail/correct.png"></image>
          <image class="status_img" wx:if="{{item.status === '2'}}" src="/images/detail/exexcise-error.png"></image>
          <image class="status_img" src="/images/detail/right.png"></image>
        </view>
      </view>
      <view class="user_choice_cell answer_cell font_color_base">
        <view class="answer_bor_cell flex_row_cen" wx:for="{{item.answerArr}}" wx:for-item='answer' wx:key="answer">{{answer}}</view>
      </view>
    </view>
  </veiw>
</view>
<view style="height:80px;"></view>
<view class="btn-page-bottom" wx:if="{{_isDataReady}}">
  <view class="btn-group-single">
    <tap-action icon="save" bindtap="next">
      <view>完成并返回</view>
      <image src="/images/v2/save_bt.png"></image>
    </tap-action>
  </view>
</view>
