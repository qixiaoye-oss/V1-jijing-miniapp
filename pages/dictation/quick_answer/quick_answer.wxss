/**
 * quick_answer 页面特有样式
 * 公共样式已提取至 /style/dictation-common.wxss
 */

/* 覆盖全局 page padding */
page {
  padding: 0;
  overflow: hidden;
  height: 100%;
}

/* ==================== 卡片内容区域 ==================== */

.swiper_item_cell {
  border: 1px solid rgba(0, 0, 0, 0.3);
  border-radius: 9px;
  width: calc(100% - 20px);
  flex-grow: 1;
  box-sizing: border-box;
  margin-bottom: 1px;
}

/* 首页说明卡片 */
.first_swiper_item_cell {
  padding: 25px;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  justify-content: center;
}

.play_audio_prompt {
  font-size: 17px;
}

/* 答案卡片 */
.answer_swiper_item_cell {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  font-weight: bold;
  font-size: 22px;
}

/* ==================== 答案显示区域 ==================== */

/* 覆盖公共样式的圆角和尺寸 */
.close_open_cell {
  border-radius: 5px;
  width: calc(100% - 30px);
  height: calc(100% - 30px);
}

/* ==================== 自动播放设置 ==================== */

.auto_play_fun_cell {
  display: flex;
  align-items: center;
  margin-block: 20px;
}

switch {
  transform: scale(0.8);
  transform-origin: center left;
}

.switch_container {
  padding: 10px 20px;
}

/* 覆盖全局字体颜色类的字体大小 */
.font_color_grey {
  font-size: 14px;
}
