.page-content {
  padding-bottom: 80px;
}

/* 题目卡片 */
.question-card {
  border: 1px solid var(--question-color);
  border-radius: 9px;
  margin-bottom: 15px;
  overflow: hidden;
}

/* 标题行 */
.question-header {
  display: flex;
  align-items: center;
  padding: 12px 15px;
  background-color: var(--question-bcakground-color);
  gap: 10px;
}

.question__no {
  background-color: var(--question-color);
  color: #ffffff;
  flex-shrink: 0;
  width: 28px;
  height: 28px;
  display: flex;
  align-items: center;
  justify-content: center;
  box-sizing: border-box;
  border-radius: 5px;
  font-size: 14px;
  font-weight: bold;
}

.question__title {
  flex: 1;
  font-size: 15px;
  color: var(--question-color);
}

/* 单词区域 */
.word-section {
  display: flex;
  align-items: flex-start;
  justify-content: space-between;
  padding: 15px;
  border-bottom: 1px solid var(--question-color);
}

.word-content {
  flex: 1;
}

.word_text {
  font-size: 22px;
  font-weight: bold;
  margin-right: 10px;
  color: var(--main-blue-color);
}

.word_translate {
  font-size: 14px;
  color: #999999;
  margin-top: 5px;
}

/* 例句区域 */
.sentence-section {
  display: flex;
  align-items: flex-start;
  justify-content: space-between;
  padding: 15px;
}

.sentence-content {
  flex: 1;
  padding-right: 10px;
}

.sentence_text {
  font-size: 17px;
  line-height: 24px;
  font-weight: bold;
}

.sentence_translate {
  font-size: 14px;
  color: #999999;
  line-height: 20px;
  margin-top: 8px;
}

/* 播放按钮 */
.play-btn {
  flex-shrink: 0;
  display: flex;
  align-items: center;
}

/* 底部按钮 */
.btn-group-single {
  position: fixed;
  left: 0px;
  bottom: 0px;
  width: calc(100% - 40px);
  margin: 15px 20px;
  box-sizing: border-box;
}
