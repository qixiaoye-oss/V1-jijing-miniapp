.page-content {
  padding-bottom: var(--button-group-total-height-single);
}

/* 题目卡片 - 默认蓝色色系 */
.question-card {
  border: 1px solid var(--main-blue-color);
  border-radius: 9px;
  margin-bottom: 15px;
  overflow: hidden;
}

/* 题目卡片 - 错误状态红色色系 */
.question-card--wrong {
  border-color: var(--main-red-color);
}

/* 标题行 - 默认蓝色 */
.question-header {
  display: flex;
  align-items: center;
  padding: 15px;
  background-color: var(--main-blue-color-bg);
  gap: 10px;
}

.question-card--wrong .question-header {
  background-color: var(--main-red-color-bg);
}

.question__no {
  background-color: var(--main-blue-color);
  color: #ffffff;
  flex-shrink: 0;
  width: 28px;
  height: 28px;
  display: flex;
  align-items: center;
  justify-content: center;
  box-sizing: border-box;
  border-radius: 5px;
  font-size: 14px;
  font-weight: bold;
}

.question-card--wrong .question__no {
  background-color: var(--main-red-color);
}

.question__title {
  flex: 1;
  font-size: 15px;
  color: var(--main-blue-color);
}

.question-card--wrong .question__title {
  color: var(--main-red-color);
}

/* 单词区域 */
.word-section {
  display: flex;
  align-items: flex-start;
  justify-content: space-between;
  padding: 15px;
  border-bottom: 1px solid var(--main-blue-color);
}

.question-card--wrong .word-section {
  border-bottom-color: var(--main-red-color);
}

.word-content {
  flex: 1;
}

.word_text {
  font-size: 22px;
  font-weight: bold;
  margin-right: 10px;
  color: var(--main-blue-color);
}

.word_translate {
  font-size: 14px;
  color: #999999;
  margin-top: 5px;
}

/* 例句区域 */
.sentence-section {
  display: flex;
  align-items: flex-start;
  justify-content: space-between;
  padding: 15px;
}

.sentence-content {
  flex: 1;
  padding-right: 10px;
}

.sentence_text {
  font-size: 17px;
  line-height: 24px;
  font-weight: bold;
}

.sentence_translate {
  font-size: 14px;
  color: #999999;
  line-height: 20px;
  margin-top: 8px;
}

/* 播放按钮 */
.play-btn {
  flex-shrink: 0;
  display: flex;
  align-items: center;
}

