.menu {
  background: var(--theme-bcakground-color);
  border-radius: 9px;
  display: flex;
  flex-direction: column;
  gap: 15px;
  padding: 15px;
  box-sizing: border-box;
}
.menu-item {
  background-color: #ffffff;
  border: 1px solid var(--theme-color);
  border-radius: 6px;
  padding: 15px;
  line-height: 1.4;
  font-size: 16px;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
