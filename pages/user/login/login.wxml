<form bindsubmit="formSubmit">
  <view class="user-page">
    <view class="user-info">
      <button class="user__avatar-button" open-type="chooseAvatar" bind:chooseavatar="onChooseAvatar">
        <image class="user__avatar" src="{{user.headUrl}}" mode="cover" />
      </button>
      <input name='headUrl' value="{{user.headUrl}}" hidden="true" />
      <input name='nickName' type="nickname" class="user__nickname" placeholder="请输入昵称" value="{{user.nickName}}" />
      <view class="remind">点击头像或昵称进行设置或修改</view>
    </view>
  </view>
  <view class="btn-page-bottom">
    <view class="btn-group-single">
      <button formType="submit" class="btn-action btn--audio" hover-class="tap-active" hover-stay-time="100">
        <view>保存</view>
        <image src="/images/v2/save_bt.png" />
      </button>
    </view>
  </view>
</form>