/* Album 列表页样式 */
.main-item__title {
  padding: 10px 15px;
}

/* ========== 1. 页面容器 ========== */
.album-list {
  width: 100%;
  display: flex;
  flex-direction: column;
  gap: 15px;
  flex-grow: 1;
  flex-shrink: 0;
}

/* ========== 2. 列表项 ========== */
.album-item {
  width: 100%;
  border: 1px solid var(--solid-border-color);
  background: transparent;
  border-radius: 9px;
  box-sizing: border-box;
  position: relative;
  overflow: hidden;
  padding: 15px;
  display: flex;
  align-items: center;
  gap: 10px;
}

.album-item__underpaint {
  position: absolute;
  left: 0;
  top: 0;
  height: 100px;
  z-index: -1;
}

.album-item__title {
  padding: 5px;
  border-radius: 6px;
  font-weight: 600;
  display: flex;
  align-items: center;
  gap: 5px;
  border: 1px solid #ffffff;
  background: transparent;
  position: relative;
  z-index: 10;
  max-width: calc(100% - 140px);
}

.album-item__icon {
  flex-shrink: 0;
  width: 25px;
  height: 25px;
}

.album-item__text {
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
  line-height: 16px;
}

/* ========== 3. 通知区域 ========== */
.notice {
  padding: 15px;
  background-color: rgba(248, 49, 47, 0.15);
  border-radius: 9px;
  margin-bottom: 15px;
  font-size: 15px;
}

.notice image {
  width: 25px;
  height: 25px;
  border-radius: 3px;
  flex-shrink: 0;
}

.notice image:last-child {
  margin-left: auto;
  transform: rotate(90deg);
}